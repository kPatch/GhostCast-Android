<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/camera_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        />
    <LinearLayout
        android:id="@+id/vTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/theme_radical_red"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/tabSetting"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_tab"
            android:src="@drawable/ic_gear" />

        <View
            android:id="@+id/view1"
            style="@style/divider_blue"
            android:layout_width="1dp"
            android:layout_height="match_parent" />

        <ImageButton
            android:id="@+id/tabBrightness"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_tab"
            android:src="@drawable/ic_brightness" />
        <View
            android:id="@+id/view1"
            style="@style/divider_blue"
            android:layout_width="1dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tabTime"
            style="@style/tab_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="00:00" />

        <ImageButton
            android:id="@+id/tabGrid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_tab"
            android:src="@drawable/ic_grid"
            android:visibility="gone" />
        <View
            android:id="@+id/view1"
            style="@style/divider_blue"
            android:layout_width="1dp"
            android:layout_height="match_parent" />

        <ImageButton
            android:id="@+id/tabSuffle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_tab"
            android:src="@drawable/ic_suffle" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/vBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme_radical_red"
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_alignParentBottom="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom|center_horizontal"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/btn1"
                style="@style/lbl_slide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PHOTO" />

            <TextView
                android:id="@+id/btn2"
                style="@style/lbl_slide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1:1" />

            <TextView
                android:id="@+id/btn3"
                style="@style/lbl_slide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="3dp"
                android:drawableTop="@drawable/dot"
                android:text="VIDEO"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/btn4"
                style="@style/lbl_slide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VIDEO"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/btn5"
                style="@style/lbl_slide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VIDEO"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center" >

            <TextView
                android:id="@+id/btnPic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_picture" />

            <TextView
                android:id="@+id/btnCapture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/capture_vid_btn" />

            <TextView
                android:id="@+id/btnEffect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_effect"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
