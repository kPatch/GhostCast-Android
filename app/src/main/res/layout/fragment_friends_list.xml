<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="st.ghostca.ghostcast.fragments.FriendsFragment">

    <EditText
        android:id="@+id/contactSearch"
        style="@style/search_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Find">

        <requestFocus />
    </EditText>

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:divider="@color/gray_very_light"
        android:dividerHeight="1dp"
        tools:listitem="@layout/friend_item"/>
        <TextView
            android:id="@+id/quickReturnBottomTarget"
            android:text="CHAT TEXT VOICE PHOTOS"
            android:gravity="center"
            android:textColor="#efefef"
            android:textSize="18sp"
            android:background="#cc0000"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
