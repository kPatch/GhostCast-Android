<resources>
    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
    <!--</style>-->

    <style name="them_btn" parent="android:Widget.Holo.Light.Button">
        <item name="android:gravity">left|center_vertical</item>
        <!--<item name="android:paddingBottom">20dp</item>-->
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <!--<item name="android:paddingTop">20dp</item>-->
        <item name="android:paddingTop">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Camera Styles -->

<!--    <style name="custom_switch" >
        <item name="android:textStyle">bold</item>
        <item name="android:thumb">@drawable/switch_thumb</item>
        <item name="android:track">@drawable/switch_bg</item>
    </style>-->
    <style name="lbl_slide" parent="android:Widget.Holo.Light.TextView">
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:minWidth">50dp</item>
        <item name="android:textColor">@color/gray_light</item>
    </style>
    <style name="tab_btn" parent="android:Widget.Holo.Light.TextView">
        <item name="android:background">@drawable/btn_tab</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="divider_blue">
        <item name="android:background">@color/blue_dark</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>
    <style name="lbl_setting" parent="android:Widget.Holo.Light.TextView">
        <item name="android:background">@color/gray_very_light</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:textColor">@color/gray_dk</item>
        <item name="android:textSize">16sp</item>
    </style>


    <!-- -->
    <style name="btn" parent="android:Widget.Holo.Light.Button">
        <item name="android:minHeight">1dp</item>
        <item name="android:minWidth">1dp</item>
    </style>

    <style name="edittext_msg" parent="android:Widget.Holo.Light.EditText">
        <item name="android:background">@drawable/edittext_bg</item>
        <item name="android:ems">10</item>
        <item name="android:imeActionId">100</item>
        <item name="android:imeOptions">actionSend</item>
        <item name="android:inputType">text</item>
        <item name="android:layout_marginLeft">@dimen/pad_5dp</item>
        <item name="android:layout_marginRight">@dimen/pad_5dp</item>
        <item name="android:paddingLeft">@dimen/pad_5dp</item>
        <item name="android:paddingRight">@dimen/pad_5dp</item>
        <item name="android:textColorHint">@color/main_color_gray</item>
        <item name="android:textSize">@dimen/txt_16sp</item>
    </style>

    <style name="btn_green_white_bg" parent="@style/btn">
        <item name="android:background">@color/white</item>
        <item name="android:paddingBottom">@dimen/pad_10dp</item>
        <item name="android:paddingRight">@dimen/pad_15dp</item>
        <item name="android:paddingTop">@dimen/pad_10dp</item>
        <item name="android:textColor">@color/theme_red_flat</item>
        <item name="android:textSize">@dimen/txt_16sp</item>
    </style>


    <style name="search_box" parent="android:Widget.Holo.Light.EditText">
        <item name="android:drawableLeft">@drawable/ic_search</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:ems">10</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:layout_margin">10dp</item>
    </style>



</resources>
